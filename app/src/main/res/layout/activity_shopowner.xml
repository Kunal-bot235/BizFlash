<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".ShopOwnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/BizFlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BizFlashâš¡"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Shop-Owners. Customize your shop"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/shopNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Shop Name"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/shopPhoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Shop Phone Number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/shopAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Shop Address"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/shopTypeEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Shop Type"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/getLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Location"
                android:backgroundTint="#C000FF"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/saveDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Details"
                android:backgroundTint="#C000FF" />
        </LinearLayout>

        <EditText
            android:id="@+id/offerEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Announce Offer"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/announceOfferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announce Offer"
            android:backgroundTint="#C000FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/shopStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop is not live"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:paddingTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <Button
            android:id="@+id/toggleStatusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Live"
            android:backgroundTint="#C000FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:backgroundTint="#FFEB3B"
            android:padding="12dp"
            android:text="Logout"
            android:textColor="#000000"
            android:layout_marginTop="40dp" />

    </LinearLayout>
</ScrollView>
